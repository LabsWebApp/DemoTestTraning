<Window x:Class="WpfViewTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfViewTest"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <local:CaptchaViewModel />
    </Window.DataContext>
    <Grid>
        <Image Source="{Binding CaptchaImage}" Width="120" Height="48"/>
        <TextBox Width="120" Height="24" Margin="0,100,0,0"
                 Text="{Binding Text, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
